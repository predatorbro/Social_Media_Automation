generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("PRISMA_DATABASE_URL")
  directUrl = env("PRISMA_DIRECT_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  page      String?
  credits   Int      @default(100)
  emailUpdates Boolean @default(true)
  contentReminders Boolean @default(true)
  scheduleAlerts Boolean @default(false)
  weeklyReports Boolean @default(true)
  theme String @default("system")
  defaultPlatforms String[] @default(["instagram", "twitter"])
  autoSave Boolean @default(true)
  contentTemplates Boolean @default(true)
  platforms Json @default("[]")
  calendar Json @default("[]")
  createdAt DateTime @default(now())
}

model Content {
  id        String   @id @default(uuid())
  email     String   @unique
  content   Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
